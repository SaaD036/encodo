<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShareImage"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:src="@mipmap/cover">
    </ImageView>
    <ImageView
        android:id="@+id/shareImage_imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40">
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/shareImage_pathTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="bottom">
            <!--            <EditText-->
            <!--                android:id="@+id/shareImage_passwordEdittext"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="45dp"-->
            <!--                android:background="@drawable/input"-->
            <!--                android:drawableRight="@drawable/password"-->
            <!--                android:paddingRight="5dp"-->
            <!--                android:paddingLeft="40dp"-->
            <!--                android:inputType="textPassword"-->
            <!--                android:gravity="center"-->

            <!--                android:hint="Password"-->
            <!--                android:textColorHint="@color/skyBlue"-->
            <!--                android:textColor="@color/skyBlue">-->
            <!--            </EditText>-->
            <Button
                android:id="@+id/shareImage_encodeButton"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                android:background="@drawable/button"

                android:text="Encode"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="15dp">
            </Button>
            <Button
                android:id="@+id/shareImage_deleteButton"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:layout_marginLeft="20dp"
                android:visibility="gone"

                android:text="Delete"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="15dp">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:gravity="center">
            <Button
                android:id="@+id/shareImage_selectButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:background="@drawable/button"
                android:layout_marginRight="30dp"

                android:text="Select Image"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textAllCaps="false">
            </Button>
            <Button
                android:id="@+id/shareImage_sendButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:background="@drawable/button"

                android:text="Send"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textAllCaps="false">
            </Button>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:src="@mipmap/saad_icon"
        android:layout_margin="15dp">
    </ImageView>
</LinearLayout>